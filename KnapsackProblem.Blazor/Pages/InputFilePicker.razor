@using System.IO

<FilePicker AllowMultiple="false" ButtonText="Select input file" OnFilesSelected="@ReadFile" FilePickerId="pickimpl" />

@code
{
    private string content;

    private async Task ReadFile(IEnumerable<IFileReference> files)
    {
        var file = files.First();
        await using var stream = await file.CreateMemoryStreamAsync(4096);
        using var reader = new StreamReader(stream);
        content = await reader.ReadToEndAsync();
    }
}
