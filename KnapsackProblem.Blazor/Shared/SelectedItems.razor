@if (Picked != null && Picked.Count > 0)
{
    <text>Selected items are:</text>
    @for (var i = 0; i < Picked.Count; i++)
    {
        if (Picked[i])
        {
            <text> @(i + 1)</text>
        }
    }
}

@code {
    /// <summary>
    /// Список флагов, показывающих, нужно ли класть объект с определенным индексом в рюкзак.
    /// </summary>
    [Parameter]
    public List<bool> Picked { get; set; }
}
