@using Data
@inject ImplementationRegistryService registryService
@implements IDisposable

<select @onchange="OnSelected">
    <option selected hidden disabled>Select implementation...</option>
    @{
        var implementations = registryService.Implementations;
        for (var i = 0; i < implementations.Count; i++)
        {
            <option value="@i">@implementations[i].GetName()</option>
        }
    }
</select>

@code
{
    private void OnSelected(ChangeEventArgs args)
    {
        if (int.TryParse(args.Value.ToString(), out var index))
        {
            registryService.Select(index);
        }
        else
        {
            registryService.Deselect();
        }
    }

    protected override void OnInitialized()
    {
        registryService.ImplementationAdded += StateHasChanged;
    }

    public void Dispose()
    {
        registryService.ImplementationAdded -= StateHasChanged;
    }
}
