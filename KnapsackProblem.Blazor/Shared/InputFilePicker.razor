@using KnapsackProblem.BlazorApp.Data
@inject InputService Input

<FilePicker AllowMultiple="false" ButtonText="Select input file" OnFilesSelected="@ReadFile" FilePickerId="pickinput"
            ShowSelectedFileName="true" FileFormats=".json" />

@code
{
    private async Task ReadFile(IEnumerable<IFileReference> files)
    {
        if (files.Any())
        {
            var file = files.First();
            await Input.SetFromFile(file);
        }
    }
}
